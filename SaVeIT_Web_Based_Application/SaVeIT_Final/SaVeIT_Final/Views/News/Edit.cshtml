@model SaVeIT_Final.Models.News

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="container well col-xs-8 col-sm-8 col-md-8 dl"
     style="background-color:white; margin-top:10px; text-align:center;">
    <h2>Edit</h2>
    @using (Html.BeginForm(Html.BeginForm("Edit", "News", FormMethod.Post, new { enctype = "multipart/form-data" })))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>News</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.newId)

            <div class="form-group">
                @Html.LabelFor(model => model.newName, "Title", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.newName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.newName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.newContent, "Content", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.TextAreaFor(model => model.newContent, new { cols = 60, rows = 10, htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.newContent, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Image", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="image" id="image" required/>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div style="margin-right:600px; margin-top:100px; display:inline-block;">
        @Html.ActionLink("Back to List", "Admin")
    </div>
</div>