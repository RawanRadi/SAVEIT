@model SaVeIT_Final.Models.News

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="container well col-xs-8 col-sm-8 col-md-8 dl"
     style="background-color:white; margin-top:80px; text-align:center;">
    <h2>Delete</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div class="form-horizontal">
        <hr />
        <div class="panel-group" style="padding-top:15px;">
            <div class="panel panel-default" style="padding-bottom:8px; color:black;">

                <div class="panel-heading">
                    <h4 style="margin-left:180px;">@Html.DisplayFor(model => model.newName) </h4>
                </div>
                <div class="panel-body" style="text-align:center;">
                    <div style="color:white; margin-left:30px; display:inline-block; background-color:black;">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-default" />
                            </div>
                        }
                    </div>
                </div>
                <hr>
            </div>
        </div>
        <div style="margin-right:600px; margin-top:100px; display:inline-block;">
            @Html.ActionLink("Back to List", "Admin")
        </div>
    </div>
</div>